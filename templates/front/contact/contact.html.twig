<section id="contact" class="section position-relative">
    <header class="section-title text-center pt-md-5 text-md-left d-md-inline-block">
        <h2 class="title typo-title text-primary-color">Contact</h2>
        <div class="title-bars position-relative w-75 w-md-100 m-auto m-md-0">
            <span class="bar position-absolute bar-1"></span>
            <span class="bar position-absolute bar-2"></span>
            <span class="bar position-absolute bar-3"></span>
        </div>
    </header>

    <div id="js-response-formulaire" class="block-none alert alert-dismissible fade mt-5" role="alert">
        <p class="mb-0"></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div id="formulaireContact" class="mt-over">
        <form method="POST" class="w-100">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <input type="text" id="name" name="name" class="form-control" />
                        <label class="form-label" for="name">Nom</label>
                    </div>
                    <small class="text-danger block-none" id="js-error-name"></small>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <input type="text" id="lastname" name="lastname" class="form-control" />
                        <label class="form-label" for="lastname">Pr√©nom</label>
                    </div>
                    <small class="text-danger block-none" id="js-error-lastname"></small>
                </div>

                <div class="col-12 mb-4">
                    <div class="form-outline">
                        <input type="email" id="email" name="email" class="form-control" />
                        <label class="form-label" for="email">Adresse email</label>
                    </div>
                    <small class="text-danger block-none" id="js-error-email"></small>
                </div>

                <div class="col-12 mb-4">
                    <div class="form-outline">
                        <textarea class="form-control" name="message" id="message" rows="7"></textarea>
                        <label class="form-label" for="message">Message</label>
                    </div>
                    <small class="text-danger block-none" id="js-error-message"></small>
                </div>

                <div class="text-center text-md-right">
                    <button id="js-send-button" type="submit" class="btn btn-outline-card">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
</section>